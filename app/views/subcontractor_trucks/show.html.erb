<ul data-role="listview">
  <li><%= @subcontractor_truck.driver_name %></li>
  <li><%= "Plate number: #{@subcontractor_truck.plate}" %></li>
  <li><%= "Firm: #{@subcontractor_truck.subcontractor.name}" %></li>
</ul>

<% @subcontractor_truck.photos.each do |photo| %>
  <div style="padding-top: 25px;">
  <%= 
    link_to(
      image_tag( photo.image.url(:medium) ), 
      "#{photo.image.url(:large)}" 
    ) 
  %>
  </div>
<% end %>