<ul data-role="listview">
  <li><%= "Plate number: #{@subcontractor_truck.plate}" %></li>
  <li><%= "Firm: #{@subcontractor_truck.subcontractor.name}" %></li>
</ul>

<div class="ui-grid-a image-gallery-grid">
  <% @subcontractor_truck.photos.each do |photo| %>
  <div class="ui-block-<%= cycle('a','b') %>">
    <%= image_tag( photo.image.url(:medium), style: 'width: 80%;border: 2px solid #CCCCCC;padding:4px;' )%>
  </div>
  <% end %>
</div>