<ul data-role="listview">
  
  <li data-role="list-divider">Information</li>
  <li><div><ul data-role="listview">
    <li><%=           "Foreman: #{@subcontractor_at_job.foreman_name}" %></li>
    <li><%= "# of Employees present: #{@subcontractor_at_job.employee_count}" %></li>

    <li><%= if @subcontractor_at_job.foreman_directs_work?     then "Y" else "?" end %>
        Foreman directs work
    </li>
    <li><%= if @subcontractor_at_job.being_supervised?         then "Y" else "?" end %>
        Is being supervised
    </li>
    <li><%= if @subcontractor_at_job.equipment_labeled?        then "Y" else "?" end %>
        Name or logo appears on equipment
    </li>
    <li><%= if @subcontractor_at_job.employees_work_elsewhere? then "Y" else "?" end %>
        Employees work with other firms
    </li>
  </ul></div></li>
  
  <li data-role="list-divider">Notes</li>
  <li><%= @subcontractor_at_job.notes.present? ? 
          @subcontractor_at_job.notes : 'No notes entered' %>
  </li>

  <li data-role="list-divider">Equipment</li>
  <li><div><ul data-role="listview" data-inset="true">
    <% if @subcontractor_at_job.equipment.blank? %>
      <li>No equipment on record</li>
    <% end %> 
    <% @subcontractor_at_job.equipment.all.each do |anequipment| %> 
      <li><%= anequipment.title %></li>
    <% end %> 
  </ul></div></li>
  
  <li data-role="list-divider">Scopes</li>
  <li><div><ul data-role="listview" data-inset="true">
    <% if @subcontractor_at_job.scopes.blank? %>
      <li>No scopes on record</li>
    <% end %> 
    <% @subcontractor_at_job.scopes.all.each do |scope| %> 
      <li><%= scope.title %></li>
    <% end %> 
  </ul></div></li>

</ul>